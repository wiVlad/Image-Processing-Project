#:kivy 1.0.9

<PongPaddle>:
    size: 20, 20
    canvas:
        Ellipse:
            pos:self.pos
            size:self.size
        Color:
            rgba: 1, 1, 0, 1

<PongBall>:
    size: 70, 70 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 1, 0, 1

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    obs: obstacle
    speeder: pong_speeder
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    Label:
        font_size: 50  
        center_x: root.width/2
        top: root.top - 10
        text: str("The Banana Benders")
        color: 1,0.8,0,1
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        color: 1,0,0,1


    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
        
    PongObstacle:
        id: obstacle
        x: root.x + 10
        y: root.y - root.y/2

    PongSpeeder:
        id: pong_speeder
        x: root.x + 10
        y: root.y - root.y/2

